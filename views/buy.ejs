<!DOCTYPE htext>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About</title>
    <!-- <link rel="stylesheet" href="css/intro.css"> -->
    <style>
        body{
            color: white!important;
            background-image: linear-gradient(darkblue,skyblue)!important;
        }
        .card-title{
            color: rgb(0, 48, 110)!important;
        }
        .card-text{
            color: rgb(41, 120, 194);
        }
        .card{
            margin-bottom: 40px;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>
    <%- include('partials/link') %>
    <div class="container container-fluid ps-md-0">
        <div class="row content mt-5">
            <% for(var i=0; i<coupon.length; i++) {  %>
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                    <h2 class="card-title text-center"><%= coupon[i].brand %></h2>
                    <p class="card-text mt-3"> <em>Name</em> - <%= coupon[i].name %></p>
                        <p class="card-text mt-3"> <em>PhoneNo</em> - <%= coupon[i].phone %></p>
                    <p class="card-text mt-3"> <em>Description</em> - <%= coupon[i].description %></p>
                    <p class="card-text "> <em>Code</em> - <%= coupon[i].code %></p>
                    <p class="card-text "> <em>Prize</em> - <%= coupon[i].prize %></p>
                    <form method="post" action="/buyw">
                    <button name="btn" class="btn btn-lg btn-dark btn-login text-uppercase fw-bold mb-2" type="submit" value="<%= coupon[i].code %>">Buy</button>
                    </form>
                    </div>
    
                </div>
            </div>
            <% } %>
        </div>
      </div>
      
</body>
</html>

